<style>
  .font-antonioLight {
    font-family: 'Antonio Light', 'Antonio', sans-serif;
    font-weight: 300;
  }

  .marquee-banner {
    width: 100%;
    overflow: hidden;
    background: #01ffff;
    display: flex;
    align-items: center;
    position: relative;
    z-index: 30;
    height: 100px; /* base */
  }

  .marquee-track {
    display: flex;
    width: max-content;
    animation: marquee 32s linear infinite;
  }

  .marquee-text {
    font-size: 3rem; /* base */
    color: #015c9f;
    text-transform: uppercase;
    white-space: nowrap;
    margin-right: 6vw;
    letter-spacing: 0.02em;
  }

  /* Ajustes por pantalla */
  @media (max-width: 480px) {
    .marquee-text { font-size: 1.8rem; }
    .marquee-banner { height: 60px; }
  }

  @media (min-width: 481px) and (max-width: 639px) {
    .marquee-text { font-size: 2.2rem; }
    .marquee-banner { height: 70px; }
  }

  @media (min-width: 640px) and (max-width: 820px) {
    .marquee-text { font-size: 2.8rem; }
    .marquee-banner { height: 85px; }
  }

  @media (min-width: 821px) and (max-width: 1024px) {
    .marquee-text { font-size: 3.8rem; }
    .marquee-banner { height: 100px; }
  }

  @media (min-width: 1025px) {
    .marquee-text { font-size: 5rem; }
    .marquee-banner { height: 120px; }
  }

  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
</style>

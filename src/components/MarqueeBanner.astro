<div class="marquee-banner w-full overflow-hidden bg-[#01ffff]">
  <div class="marquee-text text-[80px] font-antonioLight text-[#015c9f] uppercase whitespace-nowrap">
    OUR FULLY CERTIFIED FACILITY IS BUILT FOR PERFORMANCE, SCALE, AND SPEED
    <span style="display:inline-block; width: 16vw;"></span>
    OUR FULLY CERTIFIED FACILITY IS BUILT FOR PERFORMANCE, SCALE, AND SPEED
    <span style="display:inline-block; width: 16vw;"></span>
    OUR FULLY CERTIFIED FACILITY IS BUILT FOR PERFORMANCE, SCALE, AND SPEED
  </div>
</div>

<style>
  .font-antonioLight {
    font-family: 'Antonio Light', 'Antonio', sans-serif;
    font-weight: 300;
  }
  .marquee-banner {
    height: 88px;
    display: flex;
    align-items: center;
    background: #01ffff;
    position: relative;
    z-index: 30;
  }
  .marquee-text {
    will-change: transform;
    display: inline-block;
    padding-left: 100vw;
  }
  @media (max-width: 600px) {
    .marquee-text { font-size: 2.2rem !important; }
    .marquee-banner { height: 40px; }
  }
  @media (min-width: 601px) and (max-width: 1024px) {
    .marquee-text { font-size: 3.5rem !important; }
    .marquee-banner { height: 64px; }
  }
  @media (min-width: 1025px) {
    .marquee-text { font-size: 40px !important; }
    .marquee-banner { height: 68px; }
  }
</style>

<script>
  import { gsap } from 'gsap';
  window.addEventListener('DOMContentLoaded', () => {
    const banners = document.querySelectorAll('.marquee-banner .marquee-text');
    banners.forEach(banner => {
      if (banner && banner instanceof HTMLElement) {
        const textWidth = banner.offsetWidth;
        gsap.to(banner, {
          x: () => `-${textWidth}px`,
          duration: 24,
          ease: 'linear',
          repeat: -1,
          modifiers: {
            x: gsap.utils.unitize(x => parseFloat(x) % (textWidth + window.innerWidth))
          }
        });
      }
    });
  });
</script>

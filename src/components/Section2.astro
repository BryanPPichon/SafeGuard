---
import doctorImage from '../assets/doctor.png';
import backgroundImage from '../assets/fondo.png';
import '../styles/global.css';
---

<section class="relative flex items-center justify-center overflow-hidden pt-32 sm:pt-40 lg:pt-48 min-h-[100vh]">
  <!-- Imagen de fondo -->
  <div class="absolute inset-0 z-0">
    <img
      src={backgroundImage.src}
      alt="Scientific background"
      class="w-full h-full object-cover"
    />
  </div>

  <!-- Contenido principal -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      
      <!-- Imagen del doctor -->
      <div class="flex justify-center lg:justify-start order-2 lg:order-1">
        <div class="max-w-md lg:max-w-lg xl:max-w-xl w-full flex items-end h-full">
          <img
            src={doctorImage.src}
            alt="Professional scientist with arms crossed"
            class="w-full h-full object-contain"
            style="display: block; margin-top: auto;"
          />
        </div>
      </div>

      <!-- Contenido de texto -->
      <div class="text-center lg:text-left space-y-6 lg:space-y-8 order-1 lg:order-2">
        <div class="section2-title">
          <h2 class="font-[Antonio] text-[#01ffff] leading-tight">
            <span class="block text-[clamp(3rem,7.6vw,6rem)]">TURNKEY LIQUID</span>
            <span class="block text-[clamp(2.7rem,7vw,5.6rem)]">MANUFACTURING</span>
          </h2>
        </div>
        
        <div class="section2-content space-y-4 lg:space-y-6">
          <p class="text-lg sm:text-xl lg:text-xl text-white leading-relaxed font-[Montserrat] font-light">
            From custom formulation and testing to <br>
            high-capacity blending, filling, and packaging, <br>
            we deliver reliable solutions with precision, <br>
            speed, and care
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Animaciones de entrada para Section2
  const section2Timeline = gsap.timeline({
    scrollTrigger: {
      trigger: '.section2-title',
      start: 'top 80%',
      end: 'bottom 20%',
      toggleActions: 'play none none reverse'
    }
  });

  // Animación del título
  section2Timeline.from('.section2-title h2 span', {
    duration: 1,
    y: 100,
    opacity: 0,
    stagger: 0.2,
    ease: 'power3.out'
  });

  // Animación del contenido
  section2Timeline.from('.section2-content', {
    duration: 0.8,
    y: 50,
    opacity: 0,
    ease: 'power2.out'
  }, '-=0.5');

  // Animación de la imagen del doctor
  section2Timeline.from('.section2-doctor', {
    duration: 1.2,
    x: -100,
    opacity: 0,
    ease: 'power3.out'
  }, '-=0.8');
</script>
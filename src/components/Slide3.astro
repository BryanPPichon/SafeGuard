---
import logoIcon from '../assets/icono_logo.png';
import scalableImg from '../assets/3.png';
---

<section class="relative w-full min-h-[100vh] flex items-center justify-center bg-[#f7f7f8] px-4 sm:px-8 lg:px-12 py-10 sm:py-16 overflow-hidden">
  <div class="relative z-10 flex flex-col-reverse lg:flex-row items-center justify-between w-full max-w-7xl mx-auto gap-8 lg:gap-12">
    <!-- Columna izquierda: logo + texto -->
    <div class="w-full lg:w-1/2 flex flex-col items-center lg:items-start text-center lg:text-left p-6 pt-0 lg:pt-9">
      <!-- Logo: en flujo normal en mÃ³vil/tablet, absolute en escritorio -->
      <div class="flex justify-center lg:block w-full lg:w-auto mb-2 lg:mb-0">
        <img
          src={logoIcon.src}
          alt="Logo"
          class="w-16 h-16 sm:w-24 sm:h-24 lg:w-32 lg:h-32 lg:absolute lg:top-23 lg:right-170 logo-slide-lab"
        />
      </div>
      <h2 class="pt-6 sm:pt-8 lg:pt-36 mx-auto lg:ml-64 text-center lg:text-left text-slide-lab">
        <span class="title1 font-[Antonio] text-[#464b68] block leading-tight tracking-tight">SCALABLE</span>
        <span class="title2 font-[Antonio] text-[#464b68] block leading-tight tracking-tight">PRODUCTION</span>
      </h2>
      <p class="desc font-[Montserrat] text-black text-base sm:text-lg md:text-xl 2xl:text-2xl max-w-xs sm:max-w-sm mx-auto lg:mx-0 mt-4 tracking-normal lg:ml-64 text-center lg:text-left text-slide-lab">
        From pilot runs to <br class="hidden sm:block" />national-scale production
      </p>
    </div>
    <!-- Columna derecha: imagen -->
    <div class="w-full lg:w-1/2 flex items-center justify-center mb-8 lg:mb-0">
      <img
        src={scalableImg.src}
        alt="Scalable Production"
        class="max-w-[180px] sm:max-w-[360px] md:max-w-[340px] lg:max-w-[420px] w-full h-auto drop-shadow-xl mx-auto -mt-6 sm:-mt-10 md:-mt-16 lg:-mt-20"
      />
    </div>
  </div>
</section>

<style>
  .title1, .title2 {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    margin-bottom: 0;
    letter-spacing: normal;
    line-height: 1.05;
  }
  .title1 + .title2 {
    margin-top: 0;
  }
  .desc {
    font-size: clamp(1rem, 2.5vw, 1.4rem);
    color: #000;
    margin-top: 1.5rem;
    letter-spacing: normal;
    word-spacing: 0.05em;
  }
  @media (min-width: 1441px) {
    .title1 { font-size: 4.8rem; letter-spacing: -0.05em; }
    .title2 { font-size: 4.8rem; letter-spacing: -0.03em; }
    .desc { font-size: 1.5rem; letter-spacing: -0.06em; }
  }
  @media (min-width: 1025px) and (max-width: 1296px) {
    .logo-slide-lab {
      right: 30rem !important;
      top: 5.75rem !important;
    }
    .text-slide-lab {
      margin-left: 8rem !important;
    }
  }

    @media (min-width: 1297px) and (max-width: 1343px) {
    .logo-slide-lab {
      right: 45rem !important; /* Menos a la derecha en pantallas medianas */
    }
    .text-slide-lab {
      margin-left: 8rem !important;
    }
  }

</style>

---
import logoIcon from '../assets/icono_logo.png';
import microscopeImg from '../assets/2.png';
---

<section class="relative w-full min-h-[100vh] flex items-center justify-center bg-[#f7f7f8] px-4 sm:px-8 lg:px-12 py-10 sm:py-16 overflow-hidden">
  <div class="relative z-10 flex flex-col-reverse lg:flex-row items-center justify-between w-full max-w-7xl mx-auto gap-8 lg:gap-12">
    <div class="w-full lg:w-1/2 flex flex-col items-center lg:items-start text-center lg:text-left p-6 pt-0 lg:pt-9">

      <div class="flex justify-center lg:block w-full lg:w-auto mb-2 lg:mb-0">
        <img
          src={logoIcon.src}
          alt="Logo"
          class="w-20 h-20 sm:w-24 sm:h-24 lg:w-38 lg:h-38 lg:absolute lg:top-23 lg:right-182 logo-slide-lab"
        />
      </div>
      <h2 class="pt-6 sm:pt-8 lg:pt-36 mx-auto lg:ml-24 text-center lg:text-left">
        <span class="font-[Antonio] text-[#464b68] block leading-[0.95] tracking-[-0.08em] text-[clamp(5rem,7vw,8.4rem)]">R&amp;D LAB,</span>
        <span class="font-[Antonio] text-[#464b68] block leading-[1.2] tracking-[0.08em] text-[clamp(2.86rem,4.1vw,4.85rem)]">IN-HOUSE</span>
      </h2>
      <p class="font-[Montserrat] text-black max-w-xs sm:max-w-sm mx-auto lg:mx-0 mt-4 tracking-normal lg:ml-24 text-center lg:text-left sm:text-sm md:text-lg lg:text-xl xl:text-2xl 2xl:text-2xl">
        Custom formulas backed by <br class="hidden sm:block" />science and experience
      </p>
    </div>
    <div class="w-full lg:w-1/2 flex items-center justify-center mb-8 lg:mb-0">
      <img
        src={microscopeImg.src}
        alt="Microscopio"
        class="drop-shadow-xl w-[200px] sm:w-[300px] lg:w-[480px] h-auto mx-auto -mt-6 sm:-mt-10 md:-mt-16 lg:-mt-20"
      />
    </div>
  </div>
</section>

<style>
  
  @media (min-width: 1024px) and (max-width: 1036px) {
    .logo-slide-lab {
      right: 30rem !important; 
    }
    .text-slide-lab {
      margin-left: 8rem !important;
    }
  }

  @media (min-width: 1037px) and (max-width: 1203px) {
    .logo-slide-lab {
      right:32rem !important; 
    }
    .text-slide-lab {
      margin-left: 8rem !important;
    }
  }
 </style>

<script type="module">
  import { gsap } from 'https://cdn.skypack.dev/gsap';
  window.addEventListener('DOMContentLoaded', () => {
    const logo = document.querySelector('.logo-slide-lab');
    const title1 = document.querySelector('h2 span:first-child');
    const title2 = document.querySelector('h2 span:last-child');
    const desc = document.querySelector('p');
    const img = document.querySelector('img[alt="Microscopio"]');
    const tl = gsap.timeline({ defaults: { duration: 1.2, ease: 'power2.out' } });
    if (logo) tl.from(logo, { x: -80, opacity: 0 }, 0);
    if (title1) tl.from(title1, { x: -60, opacity: 0 }, 0.1);
    if (title2) tl.from(title2, { x: -40, opacity: 0 }, 0.2);
    if (desc) tl.from(desc, { x: -20, opacity: 0 }, 0.3);
    if (img) tl.from(img, { x: 80, opacity: 0 }, 0.2);
  });
</script>
